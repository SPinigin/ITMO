<Window x:Class="WinCS.WPF.Lab2.Ex2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCS.WPF.Lab2.Ex2"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="490">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Center" Margin="0,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="435" Height="32"/>
        <StackPanel
            ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Left" Height="45" Margin="350,44,0,0" VerticalAlignment="Top" Width="100">
            <Button x:Name="butAdd" Content="x+x"/>
            <Button x:Name="butMult" Content="x*x"/>
        </StackPanel>

    </Grid>
</Window>
