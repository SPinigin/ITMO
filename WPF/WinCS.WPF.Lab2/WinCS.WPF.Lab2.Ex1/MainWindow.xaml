<Window TextBoxBase.TextChanged="Window_TextChanged"
        x:Class="WinCS.WPF.Lab2.Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCS.WPF.Lab2.Ex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <RadioButton x:Name="radBut1" Content="TextBox" HorizontalAlignment="Left" Margin="160,129,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="280,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" Height="40" TextChanged="textBox1_TextChanged"/>
        <RadioButton x:Name="radBut2" Content="Grid" HorizontalAlignment="Left" Margin="161,169,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut3" Content="Window" HorizontalAlignment="Left" Margin="160,0,0,0" VerticalAlignment="Center"/>
    </Grid>
</Window>
